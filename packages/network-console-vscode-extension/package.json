{
	"name": "network-console-vscode-extension",
	"displayName": "network-console-vscode-extension",
	"description": "Embeds the Network Console DevTools component into VS Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:network-console-vscode-extension.new"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "network-console-vscode-extension.new",
				"title": "New Request",
				"category": "Network Console"
			}
		],
		"configuration": {
			"title": "Network Console",
			"properties": {
				"networkConsole.developerMode": {
					"type": "boolean",
					"default": false,
					"description": "Load the Network Console frontend from localhost:3000 instead of embedded."
				},
				"networkConsole.ignoreHttpsCertificateErrors": {
					"type": "boolean",
					"default": true,
					"description": "Bypass HTTPS certificate chain errors."
				},
				"networkConsole.openFrontendInMultipleTabs": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "Use native VS Code tabs instead of a single 'Network Console' tab. **Warning**: This will use additional memory per-tab, since each tab is presented in a unique VS Code WebView."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/webpack-cli/bin/cli --mode production",
		"compile": "node ./node_modules/webpack-cli/bin/cli --mode development",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"copy-webpack-plugin": "^6.0.3",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"network-console-shared": "file:../network-console-shared"
	}
}
